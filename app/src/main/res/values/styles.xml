<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LevelButtonStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#FFB64A</item>
        <item name="android:onClick">chooseBtnClick</item>
    </style>

    <style name="generalnotitle" parent="Theme.AppCompat.Light" >
        <item name="android:windowNoTitle">true</item>   <!-- //this -->
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:fontFamily">@font/baloo_thambi</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/custom_menu_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="HelpButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/help</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>




</resources>
